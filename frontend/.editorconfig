root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 2
indent_style = space

[*.{css,styl,scss,less,sass}]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space

[*.{json,yml}]
indent_size = 2
indent_style = space
